<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

     <style name="customizedBar" parent="@android:style/Theme.DeviceDefault.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/MyActionBar</item>   
        
    </style>
    
	<style name="MyActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/orange</item>
         <item name="android:titleTextStyle">@style/MyActionBar.Text</item>
    </style>
    
	<style name="MyActionBar.Text" parent="android:style/TextAppearance.Holo.Widget.ActionBar.Title">
    <item name="android:textColor">@color/white</item>
	</style>
	
	<style name="bookButton">
	    <item name="android:background">@color/orange</item>
	    <item name="android:textColor">@color/white</item>
	</style>
	
	<style name="MovieText">
	    <item name="android:textStyle">italic</item>
	    <item name="android:textSize">17dp</item>
	    <item name="android:textColor">@color/blue</item>
	</style>
	
	
	<style name="BankButton">
	   <item name="android:textColor">@color/white</item>
       <item name="android:background">@color/orange</item>
       <item name="android:layout_marginLeft">40dp</item>
       <item name="android:layout_marginRight">40dp</item>
	</style>
	
</resources>
